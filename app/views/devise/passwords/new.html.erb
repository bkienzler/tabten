<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Forgot your password?</h3>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-Mail" %></div>
    <br />
    <div><%= f.submit "Send me reset password instructions", class: "btn btn-danger navbar-btn" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>